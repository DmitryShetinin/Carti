        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Stretch">
        <ScrollViewer VerticalScrollBarVisibility ="Visible" Margin="0,0,285,0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <StackPanel x:Name="StackPanel2" Height="2925" Width="228" Margin="300,34,0,0"/>
        </ScrollViewer>
        <ScrollViewer VerticalScrollBarVisibility ="Auto" Margin="0,0,440,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" >
            <StackPanel x:Name="StackPanel1" Margin="147,34,0,0" Height="2925" Width="228">
            </StackPanel>
        </ScrollViewer>
        <Button Content="Колода" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="29" Width="205" Click="Button_Click_1"/>
        <Button Content="Перемешать колоду" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Height="29" Width="205" Click="Button_Click_2"/>


    </Grid>
</Window>